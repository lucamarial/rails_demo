<h1>New Author</h1>

<%= form_with scope: :author, url: authors_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :genre %><br>
    <%= form.text_area :genre %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>